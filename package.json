{
  "name": "express-demo",
  "version": "1.0.0-SNAPSHOT",
  "description": "Animals API - GraphQL, TypeScript, Node.js & Express",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "codegen": "graphql-codegen --config codegen.yml",
    "dev": "ts-node-dev src/main/com/bff/express-demo/app.ts",
    "lint": "ts-standard",
    "start": "node build/main/com/bff/express-demo/app.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/D4rK3oN/Express-demo.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/D4rK3oN/Express-demo/issues"
  },
  "homepage": "https://github.com/D4rK3oN/Express-demo#readme",
  "devDependencies": {
    "@graphql-codegen/cli": "2.13.3",
    "@graphql-codegen/typescript": "2.7.3",
    "@graphql-codegen/typescript-resolvers": "2.7.3",
    "@graphql-eslint/eslint-plugin": "3.11.2",
    "@types/express": "4.17.14",
    "ts-node-dev": "2.0.0",
    "ts-standard": "12.0.0",
    "typescript": "4.8.4"
  },
  "dependencies": {
    "express": "^4.18.1",
    "express-graphql": "^0.12.0",
    "graphql": "^15.3.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "./node_modules/ts-standard/eslintrc.json"
    ],
    "overrides": [
      {
        "files": [
          "*.gql",
          "*.graphql"
        ],
        "extends": "plugin:@graphql-eslint/schema-recommended"
      }
    ]
  }
}